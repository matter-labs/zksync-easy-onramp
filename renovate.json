  "schedule": ["every weekend"],
  "semanticCommits": "enabled",
  "npm": {
    "minimumReleaseAge": "1 week"
  },
  "enabled": false,
  "packageRules": [
    {
      "extends": ["helpers:pinGitHubActionDigests"],
