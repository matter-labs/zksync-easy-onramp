{
  "extends": ["//"],
  "tasks": {
    "dev": {
      "dependsOn": ["migration:run"],
      "cache": false,
      "persistent": true
    },
    "migration:run": {
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "LOG_LEVEL",
        "NODE_ENV",
        "PORT",
        "METRICS_PORT",
        "DISABLE_ERROR_MESSAGES",
        "COLLECT_DB_CONNECTION_POOL_METRICS_INTERVAL",
        "DB_USER",
        "DB_PASSWORD",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_REPLICA_URL_0",
        "DB_CONNECTION_POOL_SIZE",
        "DB_CONNECTION_IDLE_TIMEOUT_MS",
        "DB_STATEMENT_TIMEOUT_MS",
        "GRACEFUL_SHUTDOWN_TIMEOUT_MS",
        "UPDATE_PROVIDER_DATA_INTERVAL",
        "COINGECKO_API_KEY",
        "COINGECKO_IS_PRO_PLAN",
        "UPDATE_TOKEN_OFFCHAIN_DATA_INTERVAL",
        "LIFI_API_KEY",
        "RELEASE_VERSION"
      ]
    }
  }
}
