{
  "name": "zksync-easy-onramp-monorepo",
  "version": "0.0.1-alpha",
  "description": "An easy way to on ramp into ZKsync",
  "type": "module",
  "keywords": [
    "zksync",
    "on-ramp"
  ],
  "homepage": "https://github.com/matter-labs/zksync-easy-onramp#readme",
  "bugs": {
    "url": "https://github.com/matter-labs/zksync-easy-onramp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matter-labs/zksync-easy-onramp.git"
  },
  "license": "(MIT OR Apache-2.0)",
  "author": "Matter Labs (https://matter-labs.io/)",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "node .husky/install.mjs",
    "setup:api": "npm run -w zksync-easy-onramp-server build && npm run -w zksync-easy-onramp-server migration:run",
    "#dev": "===================================================",
    "dev": "turbo zksync-easy-onramp-server#dev zksync-easy-onramp#dev",
    "dev:api": "turbo zksync-easy-onramp-server#dev",
    "dev:sdk": "turbo zksync-easy-onramp#dev",
    "dev:demo": "turbo zksync-easy-onramp#build:watch zksync-easy-onramp-server#dev demo#dev",
    "#formatting": "===================================================",
    "format:check": "turbo prettier eslint typecheck eslint:root",
    "format:fix": "turbo prettier:fix eslint:fix eslint:root:fix",
    "eslint:root": "eslint .",
    "eslint:root:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.19.0",
    "@eslint/json": "^0.10.0",
    "@eslint/markdown": "^6.2.2",
    "@stylistic/eslint-plugin": "^3.0.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/node": "^22.10.10",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-turbo": "^2.4.4",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.4.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "packageManager": "npm@11.1.0",
  "dependencies": {
    "@changesets/cli": "^2.28.1"
  }
}
